<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/report_img"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp">
    </ImageView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Pest Name:"
        android:textSize="20sp"
        ></TextView>

    <Spinner
        android:id="@+id/spin"
        android:entries="@array/pest"
        android:layout_marginLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="match_parent">
    </Spinner>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Date :"
            android:textSize="20sp"

            ></TextView>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/selectDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="Select Date">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Number :"
            android:textSize="20sp"
            ></TextView>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/report_num"
            android:layout_width="wrap_content"
            android:hint="Number of pest you find"
            android:layout_height="match_parent">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Location :"
            android:textSize="20sp"
            ></TextView>

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/report_loca"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="pest location"
            android:textSize="20sp"
            ></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Descption :"
            android:textSize="20sp"
            ></TextView>

        <EditText
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/report_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Describe pest"
            android:textSize="20sp"
            ></EditText>
    </LinearLayout>

    <Button
        android:id="@+id/report_sub"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit">
    </Button>



</LinearLayout>