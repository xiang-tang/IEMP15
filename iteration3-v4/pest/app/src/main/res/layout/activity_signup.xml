<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="#E5F0F5"
    android:orientation="vertical"
    >

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Get Started!"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/quantum_black_100"
        />

    <EditText
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signEmail"
        android:background="@drawable/bg_for_input"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:hint="Email"
        android:layout_width="300dp"
        android:layout_height="60dp"/>

    <EditText
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signusername"
        android:background="@drawable/bg_for_input"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:hint="User Name"
        android:layout_width="300dp"
        android:layout_height="60dp"/>

    <EditText
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signpwd"
        android:background="@drawable/bg_for_input"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"/>

    <EditText
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signrepwd"
        android:background="@drawable/bg_for_input"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Please select a security question"/>
    <Spinner
        android:entries="@array/question"
        android:id="@+id/spin_qu"
        android:layout_gravity="center_horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/answer"
        android:background="@drawable/bg_for_input"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:hint="Answer"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/signterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/term"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/quantum_black_100"
            />

    </LinearLayout>

    <Button
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/sigincreate"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_for_signin"
        android:text="Create"
        android:textSize="18sp"
        />

</LinearLayout>